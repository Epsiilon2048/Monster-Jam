
// Ease of use
#macro gmcl_autmatic_gui_resize		false	// If enabled, automatically resizes the gui layer to the window

// User sandbox
#macro gmcl_sb_allow_change			true	// Whether or not the user can change the sandbox settings

// Compatibility
#macro gmcl_work_with_imgui			false	// Whether or not the console works with the extension imGUI

// Debugging
#macro gmcl_in_debug_mode			false	// Runs the dev_console_setup script on console startup
#macro gmcl_initialize_on_startup	false	// Normally it's not initialized immediately
#macro gmcl_instant_setup			false	// If false, makes startup slightly slower but much smoother